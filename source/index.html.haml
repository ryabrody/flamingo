---
title: Welcome to Middleman
---

%input.filter-input#blue{ name: 'body-color', type: 'radio', value: 'blue' }
%input.filter-input#red{ name: 'body-color', type: 'radio', value: 'red' }

%input.filter-input#orange{ name: 'beak-color', type: 'radio', value: 'blue' }
%input.filter-input#green{ name: 'beak-color', type: 'radio', value: 'red' }

%input.filter-input#orange{ name: 'legg-color', type: 'radio', value: 'blue' }
%input.filter-input#green{ name: 'legg-color', type: 'radio', value: 'red' }

#body-color
#beak-color
#legg-color
.filter
  .filter-first-level
    %a.flamingo-icon.flamingo-icon-body-color.filter-first-level-option.fitler-body-color{ href: '#body-color', title: I18n.t('.change-body-color') }
      = svg('flamingo_icon')

    %a.flamingo-icon.flamingo-icon-beak-color.filter-first-level-option.filter-beak-color{ href: '#beak-color', title: I18n.t('.change-beak-color') }
      = svg('flamingo_icon')

    %a.flamingo-icon.flamingo-icon-legg-color.filter-first-level-option.filter-legg-color{ href: '#legg-color', title: I18n.t('.change-beak-color') }
      = svg('flamingo_icon')

  .filter-second-level
    %label.filter-label.filter-label-body-color{ for: 'blue' } Blue
    %label.filter-label.filter-label-body-color{ for: 'red' } Red

  .filter-second-level
    %label.filter-label.filter-label-beak-color{ for: 'orange' } Orange
    %label.filter-label.filter-label-beak-color{ for: 'green' } Green

  .filter-second-level
    %label.filter-label.filter-label-legg-color{ for: 'dumdidum' } dumdium
    %label.filter-label.filter-label-legg-color{ for: 'asdf' } asdf

= svg('flamingo')
